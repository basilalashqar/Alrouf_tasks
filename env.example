# Alrouf Lighting Technology - Environment Variables

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Google Cloud Platform
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GOOGLE_SHEETS_ID=your_google_sheets_id
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id

# Salesforce Configuration
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_security_token
SALESFORCE_DOMAIN=login.salesforce.com

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=rfq@alrouf.com

# Slack/Teams Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url
TEAMS_WEBHOOK_URL=your_teams_webhook_url

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/alrouf_db
SQLITE_URL=sqlite:///./alrouf.db

# Vector Database
FAISS_INDEX_PATH=./data/faiss_index
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/alrouf.log

# Mock Services (for local development)
USE_MOCK_SERVICES=True
MOCK_SALESFORCE=True
MOCK_GOOGLE_SERVICES=True
